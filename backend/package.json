{
    "name": "flash-sale-backend",
    "version": "1.0.0",
    "description": "High-throughput flash sale backend with Fastify and Redis",
    "main": "dist/app.js",
    "scripts": {
        "dev": "tsx watch src/app.ts",
        "build": "tsc",
        "start": "node dist/app.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:integration": "vitest run --config vitest.integration.config.ts",
        "stress-test": "k6 run stress-tests/flash-sale.k6.js"
    },
    "keywords": [
        "flash-sale",
        "high-throughput",
        "fastify",
        "redis"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@fastify/cors": "^9.0.1",
        "@fastify/rate-limit": "^9.1.0",
        "@fastify/swagger": "^9.7.0",
        "@fastify/swagger-ui": "^5.2.5",
        "fastify": "^4.26.0",
        "ioredis": "^5.3.2",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/node": "^20.11.0",
        "@types/uuid": "^9.0.7",
        "pino-pretty": "^13.1.3",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3",
        "vitest": "^1.2.0"
    }
}
